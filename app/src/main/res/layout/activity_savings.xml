<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_dashboard_bg_deep"
    tools:context=".Savings"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/viewReportPageToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/toolbar"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/toolbar">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backBtnSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_back_icon"
                android:layout_marginStart="5dp"
                android:padding="10dp"
                android:minWidth="32dp"
                android:minHeight="32dp"
                android:elevation="4dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/viewReportHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="17dp"
                android:layout_weight="1"
                android:text="@string/sonchoyCT"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:paddingStart="10dp"
                android:textStyle="normal" />


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llll"
        android:layout_below="@+id/viewReportPageToolbar"
        android:background="@drawable/ic_group_dwbg"
        android:orientation="vertical"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_dwbg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/sutonnymj"
                    android:text="@string/transactions_Tdeposits"
                    android:textColor="@color/savingsDB_bg"
                    android:textSize="20sp"
                    app:drawableRightCompat="@drawable/ic_icon_feather_arrow_down_left_dw" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_dwbg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/sutonnymj"
                    android:text="@string/transactions_Twithdrawal"
                    android:textColor="@color/savingsDB_bg"
                    android:textSize="20sp"
                    app:drawableEndCompat="@drawable/ic_icon_feather_arrow_up_right_dw" />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="end"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:id="@+id/totaldepositTextViewT"
                    android:textAlignment="center"
                    android:text="@string/tl_amount"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:drawableRightCompat="@drawable/ic_icon_feather_arrow_down_left_dw" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="end"
                android:layout_weight="1">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalwithdrawalTextViewT"

                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:textAlignment="center"
                    android:text="@string/tl_amount"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:drawableEndCompat="@drawable/ic_icon_feather_arrow_up_right_dw" />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="viewEnd"
                    android:text="@string/transactions_TSavings"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:drawableRightCompat="@drawable/ic_icon_feather_arrow_down_left_dw"
                    tools:ignore="RtlCompat" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:layout_weight="1">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/netBalanceSV"
                    android:paddingEnd="15dp"
                    android:textAlignment="viewStart"
                    android:text="@string/tl_amount"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_icon_feather_arrow_up_right_dw"
                    tools:ignore="RtlCompat" />

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>






    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/theme_dashboard_bg_deep"
        android:id="@+id/cardviewId"
        android:layout_below="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >



    </androidx.cardview.widget.CardView>





    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:background="@drawable/backgroundbg_radius_top2side"
        android:layout_below="@id/cardviewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/headerlayoutId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="4.2"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="8dp"
                >

                <TextView
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transactions_total"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1.1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="@string/transactions_deposits"
                    android:textAlignment="textStart"
                    android:textColor="@color/savingsDB_bg"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.1"
                android:gravity="center"
                android:padding="8dp"
                >

                <TextView
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transactions_withdrawal"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewReportListRecycler"
            tools:listitem="@layout/savings_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@android:color/background_light"
            android:padding="4dp"
            android:scrollbars="vertical" />



    </LinearLayout>






    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_gravity="end"
        app:fab_labelStyle= "@style/custom_fab"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/pink_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:fab_colorNormal="@color/pink"
        app:fab_colorPressed="@color/pink_pressed">

        <com.getbase.floatingactionbutton.FloatingActionButton
            app:fab_title="@string/sv_add_deposit"
            app:fab_icon="@drawable/ic_expense"
            android:id="@+id/depositId"
            app:fabSize="mini"
            app:fab_colorPressed="@color/blue_semi_transparent_pressed"
            app:fab_colorNormal="@color/blue_semi_transparent_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            app:fab_title="@string/sv_add_withdrawal"

            app:fab_icon="@drawable/ic_revenue"
            android:id="@+id/withdrawalId"
            app:fabSize="mini"
            app:fab_colorPressed="@color/blue_semi_transparent_pressed"
            app:fab_colorNormal="@color/blue_semi_transparent_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </com.getbase.floatingactionbutton.FloatingActionsMenu>




</RelativeLayout>